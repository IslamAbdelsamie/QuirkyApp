@model IEnumerable<QuirkyApp.Models.Books>

@{
    ViewBag.Title = "Search Results";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Search Results</h2>
@if (!Model.Any())
{
    <h1 class="text-center">There is no results for this search</h1>
}
else
{
<div class="recent-book-sec">
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3">
            <div class="item">
                <img src="@Url.Content(item.Image)" alt="img">
                <h3><a href="~/Books/Details/@item.Id">@item.Title</a></h3>
                <h6><span class="price">$@item.Price</span> / <a href="~/Books/Details/@item.Id">Buy Now</a></h6>
            </div>
        </div>
    }

</div>
</div>
}
